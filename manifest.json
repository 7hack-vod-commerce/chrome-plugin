{
  "name": "7Hack VoD-Commerce",
  "version": "0.1",
  "description": "Browser plugin to emulate native player behaviour",
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Hit me"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": ["css/styles.css"],
      "js": ["content.js"]
    }
  ],
  "manifest_version": 2
}
